{
  "name": "travel",
  "version": "1.0.0",
  "description": "lencx・游记",
  "author": "lencx <cxin1314@gmail.com>",
  "scripts": {
    "dev": "yarn init:json && vite",
    "build": "tsc && vite build",
    "init:json": "node scripts/init.js",
    "type-check": "tsc",
    "lint": "eslint . --ext ts,tsx,js,jsx",
    "lint:fix": "yarn lint --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lencx/travel.git"
  },
  "bugs": {
    "url": "https://github.com/lencx/travel/issues"
  },
  "homepage": "https://github.com/lencx/travel#readme",
  "devDependencies": {
    "@types/lodash": "^4.14.170",
    "@types/react": "^17.0.8",
    "@types/react-dom": "^17.0.5",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "@vitejs/plugin-react-refresh": "^1.3.3",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "sass": "^1.34.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "typescript": "^4.4.2",
    "vite": "^2.5.3",
    "vite-tsconfig-paths": "^3.3.12"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "fast-glob": "^3.2.7",
    "heic-convert": "^1.2.4",
    "heic2any": "^0.0.3",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet-async": "^1.1.2",
    "react-router-dom": "^5.2.0",
    "wicg-inert": "^3.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "yarn type-check && lint-staged"
      ]
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint:fix",
      "git add"
    ],
    "*.{css,scss}": [
      "prettier --write",
      "stylelint --syntax=scss --fix",
      "git add"
    ],
    "{*.{json,md}}": [
      "prettier --write",
      "git add"
    ]
  }
}
